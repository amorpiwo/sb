<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.rudy.wordcards.dashboard.model">
    <class name = "Card" table = "CARD">

        <meta attribute = "class-description">
            This class contains the cards detail.
        </meta>

        <id name ="id" type="big_integer" column="ID">
            <!-- This seems to be old -->
            <generator class="identity"/>
        </id>

        <property name="word" column="WORD" type="string"/>
        <property name="lastViewed" column="LAST_VIEWED" type="LocalDate"/>

    </class>
</hibernate-mapping>